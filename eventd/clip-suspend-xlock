export DISPLAY=:0
export XAUTHORITY=/home/user/.Xauthority

/usr/local/bin/xscreensaver-command -time | grep -q locked && exit 0

/usr/local/bin/xscreensaver-command -lock

for i in {1..5}; do
	/usr/local/bin/xscreensaver-command -time | grep -q locked && exit 0
	sleep 0.5
done

# lock cancelled
exit 1
